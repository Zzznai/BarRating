@model BarEditViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="bg-light py-3 py-md-5">
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-12 col-md-11 col-lg-8 col-xl-7 col-xxl-6">
                <div class="bg-white p-4 p-md-5 rounded shadow-sm">
                    <div class="row">
                        <div class="col-12">
                            <div class="mb-5">
                                <h3>Edit Bar</h3>
                            </div>
                        </div>
                    </div>
                    <form asp-controller="Bars" asp-action="Edit" method="post" enctype="multipart/form-data">
                        <div class="row gy-3 gy-md-4 overflow-hidden">
                            <input asp-for="Id" hidden>
                            <div class="col-12">
                                <label for="name" class="form-label">Bar Name <span class="text-danger">*</span></label>
                                <input asp-for="Name" class="form-control" placeholder="Enter bar name">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label for="description" class="form-label">Description <span class="text-danger">*</span></label>
                                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter description"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label for="picture" class="form-label">Upload Photo <span class="text-danger">*</span></label>
                                <input asp-for="Photo" type="file" accept="image/*" class="form-control">
                                <span asp-validation-for="Photo" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <div class="d-grid">
                                    <button class="btn btn-lg btn-primary" type="submit">Edit Bar</button>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="row">
                        <div class="col-12">
                            <hr class="mt-5 mb-4 border-secondary-subtle">
                            <div class="row justify-content-center text-center">
                                <div class="text-center mb-1">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
